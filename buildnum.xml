<project name="RainBowCreation" default="init" basedir=".">
    <description>
        simple example increment build variable
    </description>
    <!-- set global properties for this build -->
    <property name="src" location="../rainbowcreationMultiPaper/src"/>

    <target name="init">
        <echo file="antnum.txt">My first ant ${src} ${line.separator}</echo>

        <buildnumber/>
        <replaceregexp file="${src}/main/java/me/vocanicz/rainbowcreation/Rainbowcreation.java"
                       match="public\s+static\s+final\s+String\s+BUILD_NUMBER\s+=\s+&quot;.*&quot;;"
                       replace="public static final String BUILD_NUMBER = &quot;${build.number}&quot;;"
                       byline="true"
        />

    </target>
</project>